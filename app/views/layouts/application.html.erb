<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title><%= content_for?(:title) ? yield(:title) : "Internet Video Game Library" %></title>
		<meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Internet Video Game Library" %>">
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
		<%= favicon_link_tag 'favicon.ico' %>
	</head>
	<body class="<%= controller_name %> <%= action_name %>">
		<%= render 'layouts/navigation' %>
		<div class="container">
			<%= render 'layouts/messages' %>
			<%= breadcrumbs style: :bootstrap, separator: '' %>
			<%= yield %>
		</div>
		<%= render 'layouts/support' %>
	</body>
	<footer class="footer">
		<%= debug(params) if Rails.env.development? %>
	</footer>
</html>
