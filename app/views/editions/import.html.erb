<% breadcrumb :import_edition %>

<div class="page-header">
  <h1>Import a new game</h1>
</div>
<div class="container">
  <%= form_with :html => {:class => "form-horizontal"}, :data => {:toggle => "validator"} do |f| %>
    <div class="col-md-12">
      <h3>Steam</h3>
      <h6>Paste the game URL:</h6>
      <div class="form-group has-feedback">
        <%= f.label :steam_url, "URL:", :class => "col-sm-3 control-label", :for => :steam_url %>
        <div class="col-sm-8">
          <%= f.text_field :steam_url, :required => true, :class => "form-control", :id => :steam_url, :placeholder => "https://store.steampowered.com/app/504230/Celeste/" %>
          <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
          <div class="help-block with-errors"></div>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label"></label>
        <div class="col-md-8">
          <input type="submit" class="btn btn-primary" value="Import Game">
          <span></span>
          <input type="reset" class="btn btn-default" value="Cancel">
        </div>
      </div>
    </div>
  <% end %>
</div>
