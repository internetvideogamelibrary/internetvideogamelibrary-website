<div class="card">
  <div class="card-image">
    <figure class="image">
      <%= link_to(game.link) do %>
        <%= image_tag game.coverart_url, alt: "Cover art of #{game.title} - #{game.platform_title}" %>
      <% end %>
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <%= link_to(game.link) do %>
          <p class="title is-6"><%= game.title %></p>
          <p class="subtitle is-6"><%= game.platform_title %></p>
        <% end %>
      </div>
    </div>

    <div class="content">
        <small>Released on <%= game.release_date.strftime('%d/%m/%Y') if game.release_date.present? %> at <%= game.region_title %></small><br />
        <% if current_user.present? %>
            <%= add_shelf_dropdown current_user, user_shelves, game.obj %>
        <% end %>
    </div>
  </div>
</div>
