<div class="col-md-2 col-sm-3 col-xs-6 word-break">
	<div class='thumbnail text-center'>
	<%= link_to([expansion.edition, expansion]) do %>
		<%= image_tag expansion.coverart.url(:medium), alt: "Cover art of #{expansion.title} - #{expansion.edition.platform.display_title}" %>
		<%= expansion.title %> - <%= expansion.edition.platform.display_title %><br />
	<% end %>
	<% if current_user.present? %>
		<div class="row no-margin-left no-margin-right">
			<div class="col-sm-9 no-padding-left no-padding-right">
				<%= add_link_to_game_shelf current_user, expansion, html_role: "button", checked_html_class: "btn btn-default btn-sm btn-block", unchecked_html_class: "btn btn-primary btn-sm btn-block", :unchecked_title => "Add to Wishlist" %>
			</div>
			<div class="col-sm-3 no-padding-left no-padding-right">
				<button type="button" class="btn btn-primary btn-sm btn-block" value="+" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					+
					<span class="caret"></span>
				</button>
				<%= add_shelf_dropdown current_user, expansion%>
			</div>
		</div>
	<% end %>
	</div>
</div>
