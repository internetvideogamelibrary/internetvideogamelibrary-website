<% breadcrumb :game_shelves, current_user %>
<div class="page-header">
	<h1>Add new custom shelf</h1>
</div>
<%= form_for [current_user, @game_shelf], :html => {:class => "form-horizontal"} do |f| %>
	<div class="col-md-12">
		<div class="form-group">
			<%= f.label :title, "Shelf name:", :class => "col-lg-3 control-label" %>
			<div class="col-lg-8">
				<%= f.text_field :title, :required => true, :class => "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-3 control-label"></label>
			<div class="col-md-8">
				<input type="submit" class="btn btn-primary" value="Create">
			</div>
		</div>
	</div>
<% end %>
