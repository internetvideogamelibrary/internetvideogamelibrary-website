.columns.is-centered
  .column.is-4
    %p.title
      Editing profile of
      = resource.name || resource.email
    = form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put, data: { turbo: "false" }) do |f|
      = devise_error_messages!
      .field
        .control
          = f.label :name, class: :label
          = f.text_field :name, autofocus: true, autocomplete: "name", class: "input"

      .field
        .control
          = f.label :email, class: :label
          = f.email_field :email, autocomplete: "email", class: "input"

      .box
        .field
          .control
            = f.label :password, class: :label
            = f.password_field :password, autocomplete: "off", class: "input"

        .field
          .control
            = f.label :password_confirmation, class: :label
            = f.password_field :password_confirmation, autocomplete: "off", class: "input"

          .help
            Leave these fields blank if you don't want to change your password.

      .field
        .control
          = f.label :current_password, class: :label
          = f.password_field :current_password, autocomplete: "off", class: "input"

        .help
          You must enter your current password to make changes.

      .control= f.submit "Update profile", class: "button is-primary"
